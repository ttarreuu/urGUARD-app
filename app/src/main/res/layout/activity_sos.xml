<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SOSActivity"
    android:background="@color/black"
    android:padding="50dp">

    <ImageView
        android:id="@+id/logo3_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/long_logo"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"/>

    <FrameLayout
        android:id="@+id/frame3_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/volume_icon"
        app:layout_constraintTop_toTopOf="@id/frame3_1"
        app:layout_constraintBottom_toBottomOf="@id/frame3_1"
        app:layout_constraintRight_toRightOf="@id/frame3_1"
        app:layout_constraintLeft_toLeftOf="@id/frame3_1"
        android:scaleType="centerInside"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volume is set to max \nwhen playing"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/nunito"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/frame3_1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>